<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>EXPRESS</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <form action="/kapal/store" method="POST">
      <div class="container px-5 py-4 bg-success-subtle">
        <div class="mb-3 px-5">
          <label for="nama_kapal" class="form-label">Nama Kapal</label>
          <input type="text" class="form-control" name="nama_kapal" required />
        </div>

        <div class="mb-3 px-5">
          <label for="id_pemilik" class="form-label">Nama Pemilik</label>
          <select
            class="form-select"
            aria-label="Default select example"
            name="id_pemilik"
            required
          >
            <option selected>Pilih</option>
            <% for(var i=0; i < data.length; i++){ %>
            <option value="<%= data[i].id_pemilik %>">
              <%= data[i].nama_pemilik %>
            </option>
            <% } %>
          </select>
        </div>

        <div class="mb-3 px-5">
          <label for="id_dpi" class="form-label">Nama DPI</label>
          <select
            class="form-select"
            aria-label="Default select example"
            name="id_dpi"
            required
          >
            <option selected>Pilih</option>
            <% for(var i=0; i < data2.length; i++){ %>
            <option value="<%= data2[i].id_dpi %>">
              <%= data2[i].nama_dpi %>
            </option>
            <% } %>
          </select>
        </div>

        <div class="mb-3 px-5">
          <label for="id_alat_tangkap" class="form-label">Nama Alat Tangkap</label>
          <select
            class="form-select"
            aria-label="Default select example"
            name="id_alat_tangkap"
            required
          >
            <option selected>Pilih</option>
            <% for(var i=0; i < data3.length; i++){ %>
            <option value="<%= data3[i].id_alat_tangkap %>">
              <%= data3[i].nama_alat_tangkap %>
            </option>
            <% } %>
          </select>
        </div>

        <div class="mb-3 px-5">
          <button type="submit" class="btn btn-sm btn-success">Simpan</button>
        </div>
      </div>
    </form>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
