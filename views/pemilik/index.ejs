    <!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Quiz PreTest</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <% if (messages.success) { %>
            <div class="alert alert-info" role="alert">
                <%- messages.success %>
            </div>
        <% } %>
        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Tables</h1>
        

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Pemilik</h6>
            </div>
            <div class="mt-3 px-3">
            <a href="/pemilik/create" class="btn btn-sm btn-primary">Tambah</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Pemilik</th>
                        <th scope="col">Alamat</th>
                        <th scope="col">No.HP</th>
                        <th colspan="2" scope="col">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i = 0; i < data.length; i++){ %>
                        <tr>
                            <th scope="row"><%= (i+1) %></th>
                            <td><%= data[i].nama_pemilik %></td>
                            <td><%= data[i].alamat %></td>
                            <td><%= data[i].no_hp %></td>
                            <td>
                                <a href="/pemilik/edit/<%= data[i].id_pemilik %>" class="btn btn-sm btn-warning">Edit</a>
                                <a href="/pemilik/delete/<%= data[i].id_pemilik %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

</div>
<!-- /.container-fluid -->

</div>
<!-- End of Main Content -->
<%- include('../partials/__foot.ejs') %>
</body>

</html>